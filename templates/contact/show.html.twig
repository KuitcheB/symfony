{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <h1>Contact</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ contact.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ contact.Nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ contact.Prenom }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ contact.Mail }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ contact.Message }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-primary" href="{{ path('contact_index') }}">back to list</a>

    <a  class="btn btn-warning" href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>

    {{ include('contact/_delete_form.html.twig') }}
{% endblock %}
