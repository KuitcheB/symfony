{% extends 'base.html.twig' %}

{% block title %}Contact index{% endblock %}

{% block body %}
{% if app.session.flashBag.has('success') %}
        <div class="alert alert-success text-center alert-dismissible">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            {% for msg in app.session.flashBag.get('success') %}
                {{ msg }}
            {% endfor %}
        </div>
    {% endif %}
    <h1>Contact index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Mail</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact in contacts %}
            <tr>
                <td>{{ contact.id }}</td>
                <td>{{ contact.Nom }}</td>
                <td>{{ contact.Prenom }}</td>
                <td>{{ contact.Mail }}</td>
                <td>{{ contact.Message }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('contact_show', {'id': contact.id}) }}">show</a>
                    <a  class="btn btn-warning" href="{{ path('contact_edit', {'id': contact.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success" class="btn btn-primary=" href="{{ path('contact_new') }}">Create new</a>
{% endblock %}
